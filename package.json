{
    "name": "dom-renderer",
    "version": "0.2.0",
    "description": "Template engine based on HTML 5 & ECMAScript 6",
    "keywords": [
        "template",
        "html",
        "ecmascript",
        "render"
    ],
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://web-cell.tk/DOMRenderer/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/DOMRenderer.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/DOMRenderer/issues"
    },
    "module": "source/index.js",
    "browser": "dist/dom-renderer.js",
    "directories": {
        "lib": "source",
        "test": "test"
    },
    "scripts": {
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json,yml,yaml}\"",
        "lint": "eslint source/ test/ --fix",
        "pack": "amd-bundle source/index dist/dom-renderer -m",
        "build": "npm run format  &&  npm run lint  &&  npm run pack",
        "debug": "npm run pack  &&  mocha --inspect-brk",
        "test": "npm run build  &&  mocha --exit  &&  esdoc",
        "prepublishOnly": "npm test",
        "help": "esdoc  &&  web-server docs/ -o"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test  &&  git add ."
        }
    },
    "peerDependencies": {
        "@babel/polyfill": "^7.2.5"
    },
    "devDependencies": {
        "@babel/polyfill": "^7.2.5",
        "@babel/preset-env": "^7.2.3",
        "@babel/register": "^7.0.0",
        "amd-bundle": "^1.7.4",
        "esdoc": "^1.1.0",
        "esdoc-external-webapi-plugin": "^1.0.0",
        "esdoc-standard-plugin": "^1.0.0",
        "eslint": "^5.12.0",
        "fs-extra": "^7.0.1",
        "husky": "^1.3.1",
        "jsdom": "^13.2.0",
        "koapache": "^1.0.5",
        "mocha": "^5.2.0",
        "prettier": "^1.15.3",
        "should": "^13.2.3",
        "should-sinon": "0.0.6",
        "sinon": "^7.2.3"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
